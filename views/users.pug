extends layout

block content

  <nav class="teal">
    <div class="nav-wrappe container">
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/home">Home</a></li>
        <li><a href="/logout">Log out</a></li>
      </ul>
    </div>
  </nav>

  div.container.s1.make-post-container
    <div class="row">
      <div class="col s7 push-s5">
        <ul class="collection">

          each post in user_list
            li(class="collection-item teal") #{post.name}: #{post.email}

          else
            li There are no users yet.

        </ul>
      </div>
      <div class="col s5 pull-s7">
        h2.flow-text Who's page you want to see?
        form(method='POST' action='/otherUser')
                  div.form-group
                    label(for='content')
                    input#content.form-control(type='text' placeholder='Username' name='name')
                  button.btn.left.btn-primary(type='submit') Search user page
      </div>
    </div>
